cc = cc
cflags = -std=c99 -D_POSIX_C_SOURCE=200809L -Wall -Wextra -pedantic

rule cc
  command = $cc -MD -MF $out.d $cflags -c -o $out $in
  depfile = $out.d
  deps = gcc
rule link
  command = $cc $ldflags -o $out $in

build src/kiss.o:   cc src/kiss.c
build kiss:       link src/kiss.o

default kiss
